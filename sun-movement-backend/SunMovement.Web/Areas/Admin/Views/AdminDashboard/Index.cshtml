@model SunMovement.Web.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
    // Using model properties directly now
    int productCount = Model.ProductCount;
    int serviceCount = Model.ServiceCount;
    int orderCount = Model.OrderCount;
    int eventCount = Model.EventCount;
    int faqCount = Model.FAQCount;
    int unreadMessageCount = Model.UnreadMessageCount;
    int totalMessageCount = Model.TotalMessageCount;
    decimal totalSales = 0m; // Calculate if needed
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Admin Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    
    <!-- Cards Row -->
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card card-dashboard border-primary mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <div class="text-xs text-primary text-uppercase mb-1">
                                Products
                            </div>
                            <div class="h5 mb-0 font-weight-bold">@productCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-box fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small stretched-link" href="/admin/products">View Details</a>
                    <div class="small"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card card-dashboard border-success mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <div class="text-xs text-success text-uppercase mb-1">
                                Services
                            </div>
                            <div class="h5 mb-0 font-weight-bold">@serviceCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dumbbell fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small stretched-link" href="/admin/services">View Details</a>
                    <div class="small"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card card-dashboard border-warning mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <div class="text-xs text-warning text-uppercase mb-1">
                                Orders
                            </div>
                            <div class="h5 mb-0 font-weight-bold">@orderCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small stretched-link" href="/admin/orders">View Details</a>
                    <div class="small"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card card-dashboard border-danger mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <div class="text-xs text-danger text-uppercase mb-1">
                                Events
                            </div>
                            <div class="h5 mb-0 font-weight-bold">@eventCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small stretched-link" href="/admin/events">View Details</a>
                    <div class="small"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Recent Orders and Quick Access Row -->
    <div class="row">
        <div class="col-xl-8">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Recent Orders
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Order #</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RecentOrders != null)
                            {
                                foreach (var order in (dynamic)Model.RecentOrders)
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@order.CustomerName</td>
                                        <td>@order.Date.ToString("MM/dd/yyyy")</td>
                                        <td>@order.Total.ToString("C")</td>
                                        <td><span class="badge bg-@(order.Status == "Pending" ? "warning" : (order.Status == "Delivered" ? "success" : "primary"))">@order.Status</span></td>
                                        <td>
                                            <a href="/admin/orders/details/@order.Id" class="btn btn-sm btn-info text-white">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">No recent orders available.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <a href="/admin/orders" class="btn btn-sm btn-primary">View All Orders</a>
                </div>
            </div>
        </div>
        
        <div class="col-xl-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-rocket me-1"></i>
                    Quick Access
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/admin/products/create" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus me-2"></i> Add New Product
                        </a>
                        <a href="/admin/services/create" class="btn btn-success btn-sm">
                            <i class="fas fa-plus me-2"></i> Add New Service
                        </a>
                        <a href="/admin/events/create" class="btn btn-danger btn-sm">
                            <i class="fas fa-plus me-2"></i> Add New Event
                        </a>
                        <a href="/admin/faqs/create" class="btn btn-info btn-sm text-white">
                            <i class="fas fa-plus me-2"></i> Add New FAQ
                        </a>
                    </div>

                    <hr />
                    
                    <div class="alert alert-info mt-3">
                        <h5><i class="fas fa-info-circle me-2"></i>Welcome!</h5>
                        <p class="mb-0">Welcome to the Sun Movement admin portal. From here, you can manage all aspects of your business.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
