@{
    ViewData["Title"] = "Trang Quản Trị";
}

<div class="container-fluid px-4">
    <!-- Dashboard Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-tachometer-alt me-2"></i>Trang Quản Trị
            </h1>
            <p class="mb-0 text-muted">Chào mừng trở lại! Đây là những gì đang xảy ra với doanh nghiệp của bạn hôm nay.</p>
        </div>
        <div class="d-none d-sm-inline-block">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-download me-1"></i>Tạo Báo Cáo
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-chart-bar me-2"></i>Báo Cáo Bán Hàng</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-users me-2"></i>Phân Tích Người Dùng</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-search me-2"></i>Phân Tích Tìm Kiếm</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Main Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Tổng Sản Phẩm</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalProducts</div>
                            @{
                                var productGrowth = ViewBag.GrowthStatistics?.ProductGrowth ?? 0m;
                            }
                            @if (productGrowth != 0)
                            {
                                <div class="small text-@(productGrowth > 0 ? "success" : "danger")">
                                    <i class="fas fa-arrow-@(productGrowth > 0 ? "up" : "down")"></i> @Math.Abs(productGrowth)% so với tháng trước
                                </div>
                            }
                            else
                            {
                                <div class="small text-muted">Không có thay đổi</div>
                            }
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-box fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <a class="small text-primary stretched-link" asp-area="Admin" asp-controller="ProductsAdmin" asp-action="Index">
                        <i class="fas fa-external-link-alt me-1"></i>Xem Chi Tiết
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Tổng Dịch Vụ</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalServices</div>
                            <div class="small text-success"><i class="fas fa-arrow-up"></i> 8% so với tháng trước</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-concierge-bell fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <a class="small text-warning stretched-link" asp-area="Admin" asp-controller="ServicesAdmin" asp-action="Index">
                        <i class="fas fa-external-link-alt me-1"></i>Xem Chi Tiết
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Tổng Đơn Hàng</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalOrders</div>
                            @{
                                var orderGrowth = ViewBag.GrowthStatistics?.OrderGrowth ?? 0m;
                            }
                            @if (orderGrowth != 0)
                            {
                                <div class="small text-@(orderGrowth > 0 ? "success" : "danger")">
                                    <i class="fas fa-arrow-@(orderGrowth > 0 ? "up" : "down")"></i> @Math.Abs(orderGrowth)% so với tháng trước
                                </div>
                            }
                            else
                            {
                                <div class="small text-muted">Không có thay đổi</div>
                            }
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <a class="small text-success stretched-link" asp-area="Admin" asp-controller="OrdersAdmin" asp-action="Index">
                        <i class="fas fa-external-link-alt me-1"></i>Xem Chi Tiết
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Tổng Dịch Vụ</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalServices</div>
                            @{
                                var serviceGrowth = ViewBag.GrowthStatistics?.ServiceGrowth ?? 0m;
                            }
                            @if (serviceGrowth != 0)
                            {
                                <div class="small text-@(serviceGrowth > 0 ? "success" : "danger")">
                                    <i class="fas fa-arrow-@(serviceGrowth > 0 ? "up" : "down")"></i> @Math.Abs(serviceGrowth)% so với tháng trước
                                </div>
                            }
                            else
                            {
                                <div class="small text-muted">Không có thay đổi</div>
                            }
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-concierge-bell fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <a class="small text-info stretched-link" asp-area="Admin" asp-controller="ServicesAdmin" asp-action="Index">
                        <i class="fas fa-external-link-alt me-1"></i>Xem Chi Tiết
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Analytics Section -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Lượt Xem (Hôm Nay)</div>
                            @if (ViewBag.TodayPageViews != null && (int)ViewBag.TodayPageViews > 0)
                            {
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TodayPageViews</div>
                                <div class="small text-success">
                                    <i class="fas fa-chart-line me-1"></i>Dữ liệu từ Mixpanel
                                </div>
                            }
                            else
                            {
                                <div class="h6 mb-0 text-warning">
                                    <i class="fas fa-clock me-1"></i>Đang chờ dữ liệu...
                                </div>
                                <div class="small text-muted">
                                    Export API có thể có độ trễ 15-30 phút
                                </div>
                            }
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-eye fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Doanh Thu (Tháng Này)</div>
                            @if (ViewBag.MonthlyRevenue != null && ViewBag.MonthlyRevenue.ToString() != "0")
                            {
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.MonthlyRevenue VND</div>
                            }
                            else
                            {
                                <div class="h6 mb-0 text-muted">
                                    <i class="fas fa-info-circle me-1"></i>Chưa có dữ liệu
                                </div>
                            }
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Lượt Tìm Kiếm (Hôm Nay)</div>
                            @if (ViewBag.TodaySearches != null && (int)ViewBag.TodaySearches > 0)
                            {
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TodaySearches</div>
                                <div class="small text-success">
                                    <i class="fas fa-chart-line me-1"></i>Dữ liệu từ Mixpanel
                                </div>
                            }
                            else
                            {
                                <div class="h6 mb-0 text-warning">
                                    <i class="fas fa-clock me-1"></i>Đang chờ dữ liệu...
                                </div>
                                <div class="small text-muted">
                                    Export API có thể có độ trễ 15-30 phút
                                </div>
                            }
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-search fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Thanh Toán Đang Chờ</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(ViewBag.PendingPayments ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-credit-card fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    <!-- Charts and Analytics Section -->
    <div class="row mb-4">
        <div class="col-xl-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-area me-2"></i>Tổng Quan Doanh Thu
                    </h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in">
                            <a class="dropdown-item" href="#">7 ngày qua</a>
                            <a class="dropdown-item" href="#">30 ngày qua</a>
                            <a class="dropdown-item" href="#">90 ngày qua</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="revenueChart" width="100%" height="40"></canvas>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie me-2"></i>Nguồn Doanh Thu
                    </h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <canvas id="sourcesChart"></canvas>
                    </div>
                    <div class="mt-4 text-center small">
                        <span class="mr-2">
                            <i class="fas fa-circle text-primary"></i> Sản Phẩm
                        </span>
                        <span class="mr-2">
                            <i class="fas fa-circle text-success"></i> Dịch Vụ
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Cards Row -->
    <div class="row mb-4">
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-bell me-2"></i>Hoạt Động Gần Đây & Thông Báo
                    </h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @if (ViewBag.PendingOrders > 0)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                <div>
                                    <i class="fas fa-clock text-warning me-2"></i>
                                    <span class="small">Đơn Hàng Đang Chờ</span>
                                </div>
                                <span class="badge bg-warning rounded-pill">@ViewBag.PendingOrders</span>
                            </div>
                        }
                        @if (ViewBag.UnreadMessages > 0)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                <div>
                                    <i class="fas fa-envelope text-info me-2"></i>
                                    <span class="small">Tin Nhắn Chưa Đọc</span>
                                </div>
                                <span class="badge bg-info rounded-pill">@ViewBag.UnreadMessages</span>
                            </div>
                        }
                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                            <div>
                                <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                                <span class="small">Sản Phẩm Sắp Hết Hàng</span>
                            </div>
                            <span class="badge bg-danger rounded-pill">@(ViewBag.LowStockItems ?? 0)</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                            <div>
                                <i class="fas fa-star text-warning me-2"></i>
                                <span class="small">Đánh Giá Mới</span>
                            </div>
                            <span class="badge bg-warning rounded-pill">@(ViewBag.NewReviews ?? 12)</span>
                        </div>
                        @if (ViewBag.PendingOrders == 0 && ViewBag.UnreadMessages == 0)
                        {
                            <div class="list-group-item border-0 px-0">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <span class="small text-success">Tất cả thông báo đã được xử lý!</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-tools me-2"></i>Thao Tác Quản Lý Nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4 col-md-6 mb-3">
                            <a asp-area="Admin" asp-controller="ProductsAdmin" asp-action="Create" class="btn btn-outline-primary w-100 py-3">
                                <i class="fas fa-plus-circle fa-lg mb-2 d-block"></i>
                                <span class="small">Thêm Sản Phẩm</span>
                            </a>
                        </div>
                        <div class="col-lg-4 col-md-6 mb-3">
                            <a asp-area="Admin" asp-controller="ServicesAdmin" asp-action="Create" class="btn btn-outline-warning w-100 py-3">
                                <i class="fas fa-concierge-bell fa-lg mb-2 d-block"></i>
                                <span class="small">Thêm Dịch Vụ</span>
                            </a>
                        </div>
                        <div class="col-lg-4 col-md-6 mb-3">
                            <a asp-area="Admin" asp-controller="OrdersAdmin" asp-action="Index" class="btn btn-outline-success w-100 py-3">
                                <i class="fas fa-clipboard-list fa-lg mb-2 d-block"></i>
                                <span class="small">Quản Lý Đơn Hàng</span>
                            </a>
                        </div>
                        <div class="col-lg-4 col-md-6 mb-3">
                            <a asp-area="Admin" asp-controller="PaymentsAdmin" asp-action="Index" class="btn btn-outline-info w-100 py-3">
                                <i class="fas fa-credit-card fa-lg mb-2 d-block"></i>
                                <span class="small">Quản Lý Thanh Toán</span>
                            </a>
                        </div>
                        <div class="col-lg-4 col-md-6 mb-3">
                            <a asp-area="Admin" asp-controller="AnalyticsAdmin" asp-action="Index" class="btn btn-outline-secondary w-100 py-3">
                                <i class="fas fa-chart-bar fa-lg mb-2 d-block"></i>
                                <span class="small">Phân Tích</span>
                            </a>
                        </div>
                        <div class="col-lg-4 col-md-6 mb-3">
                            <a asp-area="Admin" asp-controller="ContactMessagesAdmin" asp-action="Index" class="btn btn-outline-dark w-100 py-3">
                                <i class="fas fa-envelope fa-lg mb-2 d-block"></i>
                                <span class="small">Tin Nhắn</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Analytics & Payment Management Section -->
    <div class="row mb-4">
        <div class="col-xl-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-search me-2"></i>Phân Tích Tìm Kiếm
                    </h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.TopSearchQueries != null && ViewBag.TopSearchQueries.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Từ Khóa Tìm Kiếm</th>
                                        <th class="text-center">Số Lượng</th>
                                        <th class="text-center">Kết Quả</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var query in ViewBag.TopSearchQueries)
                                    {
                                        <tr>
                                            <td>@query.Query</td>
                                            <td class="text-center">@query.Count</td>
                                            <td class="text-center">
                                                <span class="badge @(query.ResultCount > 5 ? "bg-success" : query.ResultCount > 0 ? "bg-warning" : "bg-danger")">
                                                    @query.ResultCount
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center mt-3">
                            <a href="@Url.Action("Index", "AnalyticsAdmin", new { area = "Admin" })" class="btn btn-sm btn-primary">
                                <i class="fas fa-chart-line me-1"></i>Xem Báo Cáo Đầy Đủ
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-search fa-3x text-muted mb-3"></i>
                            <h6 class="text-muted">Chưa có dữ liệu tìm kiếm</h6>
                            <p class="small text-muted">
                                Dữ liệu tìm kiếm sẽ xuất hiện khi có người dùng thực hiện tìm kiếm trên website.
                                <br>Hãy tích hợp Mixpanel tracking để thu thập dữ liệu này.
                            </p>
                            <a href="@Url.Action("Index", "AnalyticsAdmin", new { area = "Admin" })" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-cog me-1"></i>Cấu Hình Tracking
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-xl-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-credit-card me-2"></i>Tổng Quan Thanh Toán
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center mb-3">
                        <div class="col-4">
                            <div class="border-end">
                                <div class="h5 font-weight-bold text-success">@(ViewBag.TodayRevenue ?? "0") VND</div>
                                <div class="small text-muted">Hôm Nay</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="border-end">
                                <div class="h5 font-weight-bold text-info">@(ViewBag.WeekRevenue ?? "0") VND</div>
                                <div class="small text-muted">Tuần Này</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="h5 font-weight-bold text-primary">@(ViewBag.MonthlyRevenue ?? "0") VND</div>
                            <div class="small text-muted">Tháng Này</div>
                        </div>
                    </div>
                    
                    <div class="progress mb-2" style="height: 20px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @(ViewBag.CompletedPercentage ?? 0)%" aria-valuenow="@(ViewBag.CompletedPercentage ?? 0)" aria-valuemin="0" aria-valuemax="100">
                            Hoàn thành: @(ViewBag.CompletedPercentage ?? 0)%
                        </div>
                        <div class="progress-bar bg-warning" role="progressbar" style="width: @(ViewBag.PendingPercentage ?? 0)%" aria-valuenow="@(ViewBag.PendingPercentage ?? 0)" aria-valuemin="0" aria-valuemax="100">
                            Đang chờ: @(ViewBag.PendingPercentage ?? 0)%
                        </div>
                        <div class="progress-bar bg-danger" role="progressbar" style="width: @(ViewBag.CancelledPercentage ?? 0)%" aria-valuenow="@(ViewBag.CancelledPercentage ?? 0)" aria-valuemin="0" aria-valuemax="100">
                            Đã hủy: @(ViewBag.CancelledPercentage ?? 0)%
                        </div>
                    </div>
                    
                    <div class="row mt-3">
                        <div class="col-6">
                            <a href="#" class="btn btn-sm btn-outline-success w-100">
                                <i class="fas fa-check me-1"></i>Xử Lý Đang Chờ
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="#" class="btn btn-sm btn-outline-info w-100">
                                <i class="fas fa-eye me-1"></i>Xem Tất Cả
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity & System Status -->
    <div class="row mb-4">
        <div class="col-xl-8">
