<script>
    // Mixpanel API Testing
    function testMixpanelAPI() {
        const btn = event.target;
        const originalText = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Testing...';
        btn.disabled = true;
        
        fetch('/api/mixpaneldebug/test-recent-events')
            .then(response => response.json())
            .then(data => {
                let message = `API Test Results:\n`;
                message += `‚úÖ Total Page Views: ${data.Summary.TotalPageViews}\n`;
                message += `üîç Total Searches: ${data.Summary.TotalSearches}\n`;
                message += `üìä Status: ${data.Summary.Message}\n\n`;
                message += `Note: Export API may have 15-30 minute delay for new events.`;
                
                alert(message);
                
                // If we got new data, offer to refresh the page
                if (data.Summary.HasData) {
                    if (confirm('New data found! Refresh page to update dashboard?')) {
                        location.reload();
                    }
                }
            })
            .catch(error => {
                alert('‚ùå API Test Failed: ' + error.message);
                console.error('Mixpanel API test error:', error);
            })
            .finally(() => {
                btn.innerHTML = originalText;
                btn.disabled = false;
            });
    }

    // Auto-refresh every 5 minutes if no data is shown
    @if ((ViewBag.TodayPageViews == null || (int)ViewBag.TodayPageViews == 0) && 
         (ViewBag.TodaySearches == null || (int)ViewBag.TodaySearches == 0))
    {
        <text>
        console.log('üîÑ No analytics data found. Setting up auto-refresh...');
        setTimeout(function() {
            console.log('üîÑ Auto-refreshing dashboard to check for new Mixpanel data...');
            location.reload();
        }, 5 * 60 * 1000); // 5 minutes
        </text>
    }
</script>
