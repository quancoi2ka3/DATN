<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Revenue Chart
    const revenueCtx = document.getElementById('revenueChart').getContext('2d');
    const revenueData = @Html.Raw(ViewBag.RevenueChartData ?? "{}");
    const revenueChart = new Chart(revenueCtx, {
        type: 'line',
        data: {
            labels: revenueData.labels || ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6'],
            datasets: [{
                label: 'Doanh Thu',
                data: revenueData.data || [0, 0, 0, 0, 0, 0],
                borderColor: 'rgb(75, 192, 192)',
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: function(value) {
                            return value.toLocaleString() + ' VND';
                        }
                    }
                }
            },
            plugins: {
                title: {
                    display: true,
                    text: 'Dữ liệu thực từ đơn hàng (các tháng trước chưa có dữ liệu)'
                }
            }
        }
    });

    // Revenue Sources Pie Chart
    const sourcesCtx = document.getElementById('sourcesChart').getContext('2d');
    const sourcesData = @Html.Raw(ViewBag.SalesSourceData ?? "{}");
    const sourcesChart = new Chart(sourcesCtx, {
        type: 'doughnut',
        data: {
            labels: sourcesData.labels || ['Sản Phẩm', 'Dịch Vụ'],
            datasets: [{
                data: sourcesData.data || [0, 0],
                backgroundColor: ['#4e73df', '#1cc88a']
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                },
                title: {
                    display: true,
                    text: 'Số lượng sản phẩm vs dịch vụ trong hệ thống'
                }
            }
        }
    });
</script>

