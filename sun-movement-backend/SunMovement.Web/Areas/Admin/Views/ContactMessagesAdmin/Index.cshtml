@model IEnumerable<SunMovement.Core.Models.ContactMessage>
@{
    ViewData["Title"] = "Contact Messages";
    Layout = "_AdminLayout";
    var unreadCount = Model.Count(m => !m.IsRead);
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Contact Messages</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Contact Messages</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-envelope me-1"></i> Messages 
                @if (unreadCount > 0)
                {
                    <span class="badge bg-danger ms-2">@unreadCount unread</span>
                }
            </div>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    No contact messages received yet.
                </div>
            }
            else
            {
                <table id="messagesTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th style="width: 5%"></th>
                            <th style="width: 20%">Name</th>
                            <th style="width: 20%">Email</th>
                            <th style="width: 30%">Subject</th>
                            <th style="width: 15%">Date</th>
                            <th style="width: 10%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model)
                        {
                            <tr class="@(!message.IsRead ? "fw-bold bg-light" : "")">
                                <td class="text-center">
                                    @if (!message.IsRead)
                                    {
                                        <i class="fas fa-envelope text-primary"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-envelope-open text-muted"></i>
                                    }
                                </td>
                                <td>@message.Name</td>
                                <td>@message.Email</td>
                                <td>
                                    @if (string.IsNullOrEmpty(message.Subject))
                                    {
                                        <span class="text-muted">(No subject)</span>
                                    }
                                    else
                                    {
                                        @message.Subject
                                    }
                                </td>
                                <td>@message.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                <td>
                                    <div class="btn-group table-actions">
                                        <a href="/admin/messages/details/@message.Id" class="btn btn-sm btn-info text-white">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/admin/messages/delete/@message.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#messagesTable').DataTable({
                responsive: true,
                order: [[4, 'desc']] // Sort by date descending
            });
        });
    </script>
}
