@model SunMovement.Web.Areas.Admin.Models.ApplyCouponViewModel
@{
    ViewData["Title"] = "Áp dụng mã giảm giá cho sản phẩm";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">
        <i class="fas fa-tags me-2"></i>Áp dụng mã giảm giá
    </h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AdminDashboard" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="CouponsAdmin" asp-action="Index">Mã giảm giá</a></li>
        <li class="breadcrumb-item active">Áp dụng mã giảm giá cho sản phẩm</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-link me-1"></i>
            Chọn mã giảm giá để áp dụng
        </div>
        <div class="card-body">
            <form asp-action="SelectCoupon" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Chọn mã giảm giá</label>
                            <select name="couponId" class="form-select" asp-items="ViewBag.Coupons" required>
                                <option value="">-- Chọn mã giảm giá --</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check me-1"></i> Tiếp tục
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
