        function updateCouponInfo() {
            var selectedOption = $('#CouponId option:selected');
            var couponInfo = $('#couponInfo');
            
            if (selectedOption.val()) {
                var couponType = selectedOption.data('type');
                var couponValue = selectedOption.data('value');
                var couponText = selectedOption.text();
                var parts = couponText.split(' - ');
                var couponCode = parts[0];
                
                var typeText = '';
                if (couponType == 0) {
                    typeText = 'Gi·∫£m ' + couponValue + '%';
                } else if (couponType == 1) {
                    typeText = 'Gi·∫£m ' + couponValue.toLocaleString() + ' VNƒê';
                } else if (couponType == 2) {
                    typeText = 'Mi·ªÖn ph√≠ v·∫≠n chuy·ªÉn';
                } else {
                    typeText = 'Gi·∫£m gi√° ƒë·∫∑c bi·ªát';
                }
                
                var statusText = couponText.indexOf('ƒêang ho·∫°t ƒë·ªông') !== -1 ? '‚úÖ Ho·∫°t ƒë·ªông' : '‚ùå Kh√¥ng ho·∫°t ƒë·ªông';
                var descriptionText = parts.length > 1 ? parts[1] : 'Kh√¥ng c√≥ m√¥ t·∫£';
                
                var html = '<h6>üéÅ M√£ gi·∫£m gi√°: <strong>' + couponCode + '</strong></h6>';
                html += '<p><strong>Lo·∫°i:</strong> ' + typeText + '</p>';
                html += '<p><strong>M√¥ t·∫£:</strong> ' + descriptionText + '</p>';
                html += '<p class="mb-0"><strong>Tr·∫°ng th√°i:</strong> ' + statusText + '</p>';
                
                couponInfo.html(html);
            } else {
                var html = '<h6>üìã Ch·ªçn m√£ gi·∫£m gi√° ƒë·ªÉ xem th√¥ng tin</h6>';
                html += '<p class="mb-0">Vui l√≤ng ch·ªçn m·ªôt m√£ gi·∫£m gi√° t·ª´ danh s√°ch b√™n tr√°i ƒë·ªÉ xem chi ti·∫øt.</p>';
                couponInfo.html(html);
            }
        }

        function toggleCustomerSelection() {
            var sendToAll = $('#sendToAll').is(':checked');
            var customerCheckboxes = $('.customer-checkbox');
            
            if (sendToAll) {
                customerCheckboxes.prop('checked', true);
                $('#customerSelection').addClass('bg-light');
            } else {
                customerCheckboxes.prop('checked', false);
                $('#customerSelection').removeClass('bg-light');
            }
        }

        function testEmail() {
            var couponId = $('#CouponId').val();
            if (!couponId) {
