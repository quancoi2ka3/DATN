            var originalText = submitBtn.html();
            submitBtn.html('<i class="fas fa-spinner fa-spin me-1"></i>ƒêang g·ª≠i...');
            submitBtn.prop('disabled', true);
            
            // Re-enable button after 5 seconds in case of error
