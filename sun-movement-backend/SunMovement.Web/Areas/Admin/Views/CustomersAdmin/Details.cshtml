                </div>
            </div>
        </div>

        <!-- Orders History -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-shopping-cart me-1"></i>
                    Lịch sử đơn hàng (@Model.OrderCount đơn hàng)
                </div>
                <div class="card-body">
                    @if (Model.Orders?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Mã đơn</th>
                                        <th>Ngày đặt</th>
                                        <th>Trạng thái</th>
                                        <th>Tổng tiền</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders!)
                                    {
                                        <tr>
                                            <td>
                                                <span class="font-monospace">#@order.Id.ToString().PadLeft(6, '0')</span>
                                            </td>
                                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                @switch (order.Status)
                                                {
                                                    case SunMovement.Core.Models.OrderStatus.Pending:
                                                        <span class="badge bg-warning">Chờ xử lý</span>
                                                        break;
                                                    case SunMovement.Core.Models.OrderStatus.Processing:
                                                        <span class="badge bg-info">Đang xử lý</span>
                                                        break;
                                                    case SunMovement.Core.Models.OrderStatus.Shipped:
                                                        <span class="badge bg-primary">Đã gửi hàng</span>
                                                        break;                                                    case SunMovement.Core.Models.OrderStatus.Delivered:
                                                        <span class="badge bg-success">Hoàn thành</span>
                                                        break;
                                                    case SunMovement.Core.Models.OrderStatus.Cancelled:
                                                        <span class="badge bg-danger">Đã hủy</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <span class="fw-bold">@order.TotalAmount.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                                            </td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="OrdersAdmin" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
