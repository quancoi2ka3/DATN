@model SunMovement.Core.Models.FAQ
@{
    ViewData["Title"] = "Xóa Câu Hỏi Thường Gặp";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Xóa Câu Hỏi Thường Gặp</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Trang Chủ Quản Trị</a></li>
        <li class="breadcrumb-item"><a href="/admin/faqs">Câu Hỏi Thường Gặp</a></li>
        <li class="breadcrumb-item active">Xóa</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i> Xác Nhận Xóa
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5>Bạn có chắc chắn muốn xóa câu hỏi thường gặp này?</h5>
                <p>Hành động này không thể hoàn tác.</p>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <strong>Câu Hỏi</strong>
                </div>
                <div class="card-body">
                    @Model.Question
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <strong>Câu Trả Lời</strong>
                </div>
                <div class="card-body">
                    @Html.Raw(Model.Answer.Replace("\n", "<br>"))
                </div>
            </div>
              <dl class="row">
                <dt class="col-sm-3">Danh Mục</dt>
                <dd class="col-sm-9">@Model.Category.ToString()</dd>
                
                <dt class="col-sm-3">Thứ Tự Hiển Thị</dt>
                <dd class="col-sm-9">@Model.DisplayOrder</dd>
            </dl>
            
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>
