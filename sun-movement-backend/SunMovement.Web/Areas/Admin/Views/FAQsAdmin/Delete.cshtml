@model SunMovement.Core.Models.FAQ
@{
    ViewData["Title"] = "Delete FAQ";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Delete FAQ</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/admin/faqs">FAQs</a></li>
        <li class="breadcrumb-item active">Delete</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i> Confirm Deletion
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5>Are you sure you want to delete this FAQ?</h5>
                <p>This action cannot be undone.</p>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <strong>Question</strong>
                </div>
                <div class="card-body">
                    @Model.Question
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <strong>Answer</strong>
                </div>
                <div class="card-body">
                    @Html.Raw(Model.Answer.Replace("\n", "<br>"))
                </div>
            </div>              <dl class="row">
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category</dd>
                
                <dt class="col-sm-3">Display Order</dt>
                <dd class="col-sm-9">@Model.DisplayOrder</dd>
            </dl>
            
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
