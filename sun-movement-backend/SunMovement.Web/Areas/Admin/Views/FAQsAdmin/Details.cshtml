@model SunMovement.Core.Models.FAQ
@{
    ViewData["Title"] = "FAQ Details";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">FAQ Details</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/admin/faqs">FAQs</a></li>
        <li class="breadcrumb-item active">Details</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle me-1"></i> FAQ Information
        </div>
        <div class="card-body">
            <div class="card mb-4">
                <div class="card-header">
                    <strong>Question</strong>
                </div>
                <div class="card-body">
                    @Model.Question
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <strong>Answer</strong>
                </div>
                <div class="card-body">
                    @Html.Raw(Model.Answer.Replace("\n", "<br>"))
                </div>
            </div>
              <dl class="row">
                <dt class="col-sm-3">Danh mục</dt>
                <dd class="col-sm-9">@Model.Category.ToString()</dd>
                
                <dt class="col-sm-3">Thứ tự hiển thị</dt>
                <dd class="col-sm-9">@Model.DisplayOrder</dd>
                
                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Không hoạt động</span>
                    }
                </dd>
                
                <dt class="col-sm-3">Ngày tạo</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>
                
                <dt class="col-sm-3">Cập nhật lần cuối</dt>
                <dd class="col-sm-9">@(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("g") : "Never")</dd>
            </dl>
            
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Chỉnh sửa</a>
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Xóa</a>
            </div>
        </div>
    </div>
</div>
