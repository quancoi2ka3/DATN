@model SunMovement.Core.Models.Order
@using SunMovement.Core.Models
@{
    ViewData["Title"] = "Order Details";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Order Details</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/admin/orders">Orders</a></li>
        <li class="breadcrumb-item active">Details</li>
    </ol>
    
    <div class="row">
        <div class="col-xl-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div><i class="fas fa-shopping-cart me-1"></i> Order #@Model.Id</div>
                    <div>
                        @switch (Model.Status)
                        {
                            case OrderStatus.Pending:
                                <span class="badge bg-warning text-dark">Pending</span>
                                break;
                            case OrderStatus.Processing:
                                <span class="badge bg-info">Processing</span>
                                break;
                            case OrderStatus.Shipped:
                                <span class="badge bg-primary">Shipped</span>
                                break;
                            case OrderStatus.Delivered:
                                <span class="badge bg-success">Delivered</span>
                                break;
                            case OrderStatus.Cancelled:
                                <span class="badge bg-danger">Cancelled</span>
                                break;
                            default:
                                <span class="badge bg-secondary">@Model.Status</span>
                                break;
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="mb-3">Order Information</h5>                            <dl class="row">
                                <dt class="col-sm-4">Order Date</dt>
                                <dd class="col-sm-8">@Model.OrderDate.ToString("MM/dd/yyyy HH:mm")</dd>
                                
                                <dt class="col-sm-4">Payment Method</dt>
                                <dd class="col-sm-8">@Model.PaymentMethod</dd>
                                
                                <dt class="col-sm-4">Payment Status</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsPaid)
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Unpaid</span>
                                    }
                                </dd>
                                
                                @if (!string.IsNullOrEmpty(Model.TrackingNumber))
                                {
                                    <dt class="col-sm-4">Tracking #</dt>
                                    <dd class="col-sm-8">@Model.TrackingNumber</dd>
                                }
                                
                                @if (Model.UpdatedAt != default(DateTime))
                                {
                                    <dt class="col-sm-4">Last Updated</dt>
                                    <dd class="col-sm-8">@Model.UpdatedAt.ToString("MM/dd/yyyy HH:mm")</dd>
                                }
                            </dl>
                        </div>                        <div class="col-md-6">
                            <h5 class="mb-3">Customer Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Name</dt>
                                <dd class="col-sm-8">@(Model.User?.UserName ?? "N/A")</dd>
                                
                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@(Model.User?.Email ?? "N/A")</dd>
                                
                                <dt class="col-sm-4">Phone</dt>
                                <dd class="col-sm-8">@(Model.PhoneNumber ?? "N/A")</dd>
                            </dl>
                        </div>
                    </div>
                      <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="mb-3">Shipping Address</h5>
                            <address>
                                @Model.ShippingAddress
                            </address>
                        </div>
                        <div class="col-md-6">
                            <h5 class="mb-3">Billing Address</h5>
                            <address>
                                @Model.ShippingAddress
                            </address>
                        </div>
                    </div>
                    
                    <h5 class="mb-3">Order Items</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                            </thead>                            <tbody>                                @foreach (var item in Model.Items ?? new List<OrderItem>())
                                {
                                    <tr>
                                        <td>
                                            @item.ProductName
                                            @if (!string.IsNullOrEmpty(item.ProductOptions))
                                            {
                                                <small class="d-block text-muted">@item.ProductOptions</small>
                                            }
                                        </td>
                                        <td>$@item.UnitPrice.ToString("F2")</td>
                                        <td>@item.Quantity</td>
                                        <td>$@((item.UnitPrice * item.Quantity).ToString("F2"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 ms-auto">                            <table class="table table-clear">
                                <tbody>
                                    <tr>
                                        <td class="text-end"><strong>Subtotal</strong></td>
                                        <td class="text-end">$@Model.TotalAmount.ToString("F2")</td>
                                    </tr>
                                    <tr>
                                        <td class="text-end"><strong>Shipping</strong></td>
                                        <td class="text-end">$0.00</td>
                                    </tr>
                                    <tr>
                                        <td class="text-end"><strong>Total</strong></td>
                                        <td class="text-end"><strong>$@Model.TotalAmount.ToString("F2")</strong></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row mt-3">
                            <div class="col">
                                <h5>Order Notes</h5>
                                <div class="p-3 bg-light rounded">
                                    @Model.Notes
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-xl-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-tools me-1"></i> Order Actions
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="/admin/orders/update-status/@Model.Id" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">Update Status</h5>
                                <small><i class="fas fa-chevron-right"></i></small>
                            </div>
                            <p class="mb-1">Change the order status</p>
                        </a>
                        
                        <a href="/admin/orders/update-tracking/@Model.Id" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">Add Tracking</h5>
                                <small><i class="fas fa-chevron-right"></i></small>
                            </div>
                            <p class="mb-1">Add or update shipping tracking information</p>
                        </a>
                    </div>
                    
                    <div class="mt-3">
                        <a href="/admin/orders" class="btn btn-secondary">Back to Orders</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
