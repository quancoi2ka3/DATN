@model SunMovement.Core.Models.Product
@{
    ViewData["Title"] = "Xóa Sản Phẩm";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Xóa Sản Phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Trang Chủ Quản Trị</a></li>
        <li class="breadcrumb-item"><a href="/admin/productsadmin">Sản Phẩm</a></li>
        <li class="breadcrumb-item active">Xóa</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i> Xác Nhận Xóa
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5>Bạn có chắc chắn muốn xóa sản phẩm này?</h5>
                <p>Hành động này không thể hoàn tác.</p>
            </div>
            
            <div class="row">
                <div class="col-md-4 mb-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" class="img-fluid rounded" style="max-height: 200px; width: 100%; object-fit: contain;" />
                    }
                    else
                    {
                        <div class="bg-light text-center p-5">
                            <i class="fas fa-image fa-3x text-muted"></i>
                            <p class="mt-3">Không có hình ảnh</p>
                        </div>
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Tên</dt>
                        <dd class="col-sm-9">@Model.Name</dd>
                        
                        <dt class="col-sm-3">Danh Mục</dt>
                        <dd class="col-sm-9">@Model.Category.ToString()</dd>
                        
                        <dt class="col-sm-3">Giá</dt>
                        <dd class="col-sm-9">@Model.Price.ToString("N0") VND</dd>
                        
                        <dt class="col-sm-3">Trạng Thái</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Hoạt Động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Không Hoạt Động</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Ngày Tạo</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>
                    </dl>
                </div>
            </div>
            
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>
