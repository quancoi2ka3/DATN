@model IEnumerable<SunMovement.Core.Models.Product>
@{
    ViewData["Title"] = "Products";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Products</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Products</li>
    </ol>      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div><i class="fas fa-table me-1"></i> Products List</div>
            <div>
                <form method="post" asp-controller="ProductsAdmin" asp-action="ClearCache" asp-area="Admin" class="d-inline">
                    <button type="submit" class="btn btn-warning btn-sm me-2">
                        <i class="fas fa-broom"></i> Clear Cache
                    </button>
                </form>
                <a href="/admin/ProductsAdmin/Create" class="btn btn-primary btn-sm">Add New Product</a>
            </div>
        </div>
        <div class="card-body">
            <table id="productsTable" class="table table-striped table-hover datatable">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Featured</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="@product.Name" style="width: 50px; height: 50px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-light text-center" style="width: 50px; height: 50px; line-height: 50px;">No Image</div>
                                }
                            </td>
                            <td>@product.Name</td>
                            <td>@product.Category</td>
                            <td>$@product.Price.ToString("F2")</td>
                            <td>
                                @if (product.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                @if (product.IsFeatured)
                                {
                                    <span class="badge bg-primary">Featured</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark">No</span>
                                }
                            </td>                            <td>
                                <div class="btn-group table-actions">
                                    <a href="/admin/ProductsAdmin/Details/@product.Id" class="btn btn-sm btn-info text-white">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/admin/ProductsAdmin/Edit/@product.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/admin/ProductsAdmin/Delete/@product.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* DataTable initialization is handled by admin-datatables.js for tables with 'datatable' class *@
