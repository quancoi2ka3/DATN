@model IEnumerable<SunMovement.Core.Models.Service>
@{
    ViewData["Title"] = "Services";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Services</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Services</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div><i class="fas fa-dumbbell me-1"></i> Services List</div>            <div>
                <form method="post" asp-controller="ServicesAdmin" asp-action="ClearCache" asp-area="Admin" class="d-inline">
                    <button type="submit" class="btn btn-warning btn-sm me-2">
                        <i class="fas fa-broom"></i> Clear Cache
                    </button>
                </form>
                <a href="/admin/servicesadmin/create" class="btn btn-primary btn-sm">Add New Service</a>
            </div>
        </div>
        <div class="card-body">
            <table id="servicesTable" class="table table-striped table-hover datatable">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Schedules</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(service.ImageUrl))
                                {
                                    <img src="@service.ImageUrl" alt="@service.Name" style="width: 50px; height: 50px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-light text-center" style="width: 50px; height: 50px; line-height: 50px;">No Image</div>
                                }
                            </td>
                            <td>@service.Name</td>
                            <td>@service.Type</td>
                            <td>$@service.Price.ToString("F2")</td>
                            <td>
                                @if (service.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>                            <td>
                                @(service.Schedules != null ? service.Schedules.Count : 0)
                                <a href="/admin/servicesadmin/schedules/@service.Id" class="btn btn-sm btn-outline-primary ms-2">
                                    <i class="fas fa-calendar-alt"></i>
                                </a>
                            </td><td>
                                <div class="btn-group table-actions">
                                    <a href="/admin/servicesadmin/details/@service.Id" class="btn btn-sm btn-info text-white">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/admin/servicesadmin/edit/@service.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/admin/servicesadmin/delete/@service.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* DataTable initialization is handled by admin-datatables.js for tables with 'datatable' class *@
