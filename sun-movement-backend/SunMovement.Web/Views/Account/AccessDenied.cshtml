@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h3 class="text-center">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Access Denied
                </h3>
            </div>
            <div class="card-body text-center">
                <h4>You don't have permission to access this resource.</h4>
                <p class="text-muted">
                    The page you're trying to access requires special permissions. 
                    Please contact your administrator if you believe you should have access to this area.
                </p>
                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-home me-1"></i>Go to Homepage
                    </a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary ms-2">
                        <i class="fas fa-sign-in-alt me-1"></i>Login with Different Account
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
