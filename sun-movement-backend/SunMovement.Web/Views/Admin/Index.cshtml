@{
    ViewData["Title"] = "Trang Chủ Quản Trị";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Trang Chủ Quản Trị</h1>
    
    <!-- Stats Cards Row -->
    <div class="row mt-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card dashboard-widget border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Tổng Đơn Hàng</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                <i class="fas fa-info-circle text-muted"></i>
                                <small class="text-muted">Chuyển hướng đến /admin/dashboard</small>
                            </div>
                            <div class="small text-info mt-2">
                                <i class="fas fa-external-link-alt"></i> Cần truy cập dashboard chính
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card dashboard-widget border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Doanh Thu (Tháng)</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                <i class="fas fa-info-circle text-muted"></i>
                                <small class="text-muted">Dữ liệu tại dashboard chính</small>
                            </div>
                            <div class="small text-info mt-2">
                                <i class="fas fa-external-link-alt"></i> Xem chi tiết tại /admin
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card dashboard-widget border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Khách Hàng Mới</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">24</div>
                            <div class="small text-danger mt-2">
                                <i class="fas fa-arrow-down"></i> Giảm 5%
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card dashboard-widget border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Yêu Cầu Hỗ Trợ</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">5</div>
                            <div class="small text-success mt-2">
                                <i class="fas fa-check"></i> 100% đã giải quyết
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row">
        <div class="col-xl-8 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Sales Overview</h6>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-light dropdown-toggle" id="salesTimeRangeDropdown" data-bs-toggle="dropdown">
                            Last 30 Days
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="salesTimeRangeDropdown">
                            <li><a class="dropdown-item" href="#">Last 7 Days</a></li>
                            <li><a class="dropdown-item" href="#">Last 30 Days</a></li>
                            <li><a class="dropdown-item" href="#">Last 3 Months</a></li>
                            <li><a class="dropdown-item" href="#">Last Year</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="salesChart" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Product Categories</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie">
                        <canvas id="productCategoryChart" height="260"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activities and Quick Links Row -->
    <div class="row">
        <div class="col-xl-8 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Recent Activities</h6>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <div>
                                <i class="fas fa-shopping-cart text-primary me-2"></i>
                                <span>New order #12345 received</span>
                                <div class="small text-muted">2 hours ago</div>
                            </div>
                            <a href="/admin/orders/12345" class="btn btn-sm btn-outline-primary">View</a>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <div>
                                <i class="fas fa-user-plus text-success me-2"></i>
                                <span>New customer registered</span>
                                <div class="small text-muted">4 hours ago</div>
                            </div>
                            <a href="/admin/customers/25" class="btn btn-sm btn-outline-primary">View</a>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <div>
                                <i class="fas fa-comment text-info me-2"></i>
                                <span>New product review for "Fitness Band"</span>
                                <div class="small text-muted">Yesterday</div>
                            </div>
                            <a href="/admin/products/3#reviews" class="btn btn-sm btn-outline-primary">View</a>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <div>
                                <i class="fas fa-dollar-sign text-warning me-2"></i>
                                <span>Payment received for order #12340</span>
                                <div class="small text-muted">Yesterday</div>
                            </div>
                            <a href="/admin/orders/12340" class="btn btn-sm btn-outline-primary">View</a>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <div>
                                <i class="fas fa-exclamation-circle text-danger me-2"></i>
                                <span>Low stock alert for "Protein Powder"</span>
                                <div class="small text-muted">2 days ago</div>
                            </div>
                            <a href="/admin/products/5" class="btn btn-sm btn-outline-primary">View</a>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="/admin/activities" class="text-decoration-none">View All Activities</a>
                </div>
            </div>
        </div>

        <div class="col-xl-4 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Links</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <a href="/admin/products/create" class="btn btn-primary w-100">
                                <i class="fas fa-plus-circle me-1"></i> Add Product
                            </a>
                        </div>
                        <div class="col-6 mb-3">
                            <a href="/admin/services/create" class="btn btn-success w-100">
                                <i class="fas fa-plus-circle me-1"></i> Add Service
                            </a>
                        </div>
                        <div class="col-6 mb-3">
                            <a href="/admin/events/create" class="btn btn-info w-100">
                                <i class="fas fa-plus-circle me-1"></i> Add Event
                            </a>
                        </div>
                        <div class="col-6 mb-3">
                            <a href="/admin/reports" class="btn btn-warning w-100">
                                <i class="fas fa-chart-bar me-1"></i> Reports
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-header border-top">
                    <h6 class="m-0 font-weight-bold text-primary">System Status</h6>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <span>Server Status</span>
                            <span class="badge bg-success">Online</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <span>Database</span>
                            <span class="badge bg-success">Connected</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <span>API Status</span>
                            <span class="badge bg-success">OK</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <span>Last Backup</span>
                            <span>Today, 03:00 AM</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Initialize charts when DOM is loaded
    document.addEventListener('DOMContentLoaded', function() {
        // Sales Chart
        const salesCtx = document.getElementById('salesChart');
        if (salesCtx) {
            const salesChart = new Chart(salesCtx, {
                type: 'line',
                data: {
                    labels: ['May 1', 'May 5', 'May 10', 'May 15', 'May 20', 'May 25'],
                    datasets: [{
                        label: 'Orders',
                        data: [15, 22, 18, 24, 33, 28],
                        borderColor: 'rgba(78, 115, 223, 1)',
                        backgroundColor: 'rgba(78, 115, 223, 0.1)',
                        borderWidth: 2,
                        tension: 0.3,
                        fill: true
                    },
                    {
                        label: 'Revenue',
                        data: [1200, 1900, 1500, 2100, 2800, 2400],
                        borderColor: 'rgba(28, 200, 138, 1)',
                        backgroundColor: 'rgba(28, 200, 138, 0.1)',
                        borderWidth: 2,
                        tension: 0.3,
                        fill: true
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        // Product Categories Chart
        const categoryCtx = document.getElementById('productCategoryChart');
        if (categoryCtx) {
            const categoryChart = new Chart(categoryCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Supplements', 'Equipment', 'Apparel', 'Accessories'],
                    datasets: [{
                        data: [40, 25, 20, 15],
                        backgroundColor: [
                            'rgba(78, 115, 223, 0.8)',
                            'rgba(28, 200, 138, 0.8)',
                            'rgba(246, 194, 62, 0.8)',
                            'rgba(231, 74, 59, 0.8)'
                        ],
                        hoverOffset: 4
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    },
                    cutout: '70%'
                }
            });
        }
    });
</script>
}
