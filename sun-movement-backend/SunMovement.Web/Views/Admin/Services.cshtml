@model IEnumerable<SunMovement.Core.Models.Service>

@{
    ViewData["Title"] = "Manage Services";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Services</h1>
    <a asp-action="CreateService" class="btn btn-primary">Add New Service</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No services found. Please add some services.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Type</td>
                        <td>$@item.Price.ToString("F2")</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="EditService" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="ServiceSchedules" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Schedules</a>
                                <a asp-action="DeleteService" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
