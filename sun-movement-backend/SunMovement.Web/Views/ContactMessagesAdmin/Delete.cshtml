@model SunMovement.Core.Models.ContactMessage
@{
    ViewData["Title"] = "Delete Message";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Delete Message</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/admin/messages">Contact Messages</a></li>
        <li class="breadcrumb-item active">Delete</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i> Confirm Deletion
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5>Are you sure you want to delete this message?</h5>
                <p>This action cannot be undone.</p>
            </div>
            
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <strong>
                        @if (string.IsNullOrEmpty(Model.Subject))
                        {
                            <span class="text-muted">(No subject)</span>
                        }
                        else
                        {
                            @Model.Subject
                        }
                    </strong>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">From</dt>
                        <dd class="col-sm-9">@Model.Name &lt;@Model.Email&gt;</dd>
                        
                        <dt class="col-sm-3">Received</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("MM/dd/yyyy HH:mm")</dd>
                    </dl>
                    
                    <div class="message-content p-3 bg-light rounded">
                        @Html.Raw(Model.Message.Replace("\n", "<br>"))
                    </div>
                </div>
            </div>
            
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
