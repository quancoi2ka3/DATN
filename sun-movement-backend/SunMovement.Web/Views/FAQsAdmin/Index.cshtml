@model IEnumerable<SunMovement.Core.Models.FAQ>
@{
    ViewData["Title"] = "FAQs";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">FAQs</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item active">FAQs</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div><i class="fas fa-question-circle me-1"></i> FAQs List</div>
            <a href="/admin/faqs/create" class="btn btn-primary btn-sm">Add New FAQ</a>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    No FAQs have been created yet. Click the "Add New FAQ" button to create one.
                </div>
            }
            else
            {
                <table id="faqsTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Question</th>
                            <th>Category</th>
                            <th>Order</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var faq in Model)
                        {                            <tr>
                                <td>@faq.Question</td>
                                <td>@faq.Category.ToString()</td>
                                <td>@faq.DisplayOrder</td>
                                <td>
                                    @if (faq.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group table-actions">
                                        <a href="/admin/faqs/details/@faq.Id" class="btn btn-sm btn-info text-white">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/admin/faqs/edit/@faq.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/admin/faqs/delete/@faq.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#faqsTable').DataTable({
                responsive: true,
                order: [[2, 'asc']] // Sort by Order column
            });
        });
    </script>
}
