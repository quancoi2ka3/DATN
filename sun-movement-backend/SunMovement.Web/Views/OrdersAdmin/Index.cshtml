@model IEnumerable<SunMovement.Core.Models.Order>
@using SunMovement.Core.Models
@{
    ViewData["Title"] = "Orders";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Orders</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Orders</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-shopping-cart me-1"></i> Orders List
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    No orders have been placed yet.
                </div>
            }
            else
            {
                <table id="ordersTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.CustomerName</td>
                                <td>@order.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>$@order.TotalAmount.ToString("F2")</td>
                                <td>
                                    @switch (order.Status)
                                    {
                                        case OrderStatus.Pending:
                                            <span class="badge bg-warning text-dark">Pending</span>
                                            break;
                                        case OrderStatus.Processing:
                                            <span class="badge bg-info">Processing</span>
                                            break;
                                        case OrderStatus.Shipped:
                                            <span class="badge bg-primary">Shipped</span>
                                            break;
                                        case OrderStatus.Delivered:
                                            <span class="badge bg-success">Delivered</span>
                                            break;
                                        case OrderStatus.Cancelled:
                                            <span class="badge bg-danger">Cancelled</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@order.Status</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <div class="btn-group table-actions">
                                        <a href="/admin/orders/details/@order.Id" class="btn btn-sm btn-info text-white">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/admin/orders/update-status/@order.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-exchange-alt"></i>
                                        </a>
                                        @if (order.Status == OrderStatus.Processing || order.Status == OrderStatus.Shipped)
                                        {
                                            <a href="/admin/orders/update-tracking/@order.Id" class="btn btn-sm btn-secondary">
                                                <i class="fas fa-truck"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#ordersTable').DataTable({
                responsive: true,
                order: [[2, 'desc']] // Sort by date descending
            });
        });
    </script>
}
